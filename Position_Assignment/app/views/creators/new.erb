

<% if @creator.errors.any? %>
    <div class="error_messages">

      <% @creator.errors.full_messages.each do |message| %>
          <p><%= message %></p>
      <% end %>
    </div>
<% end %>

<%= form_for @creator do |c| %>

    <div class="biggerformwrapper">
      <h1>Skapa ny api-nyckel</h1>
      <div class="informationGroup">
        <%= c.label :applikation_name %>
        <%= c.text_field :applikation_name, :class => "information-field"%>
      </div>
      <div class="informationGroup">
        <%= c.label :applikation_description %>
        <%= c.text_area :applikation_description, :class => "information-field" %>
      </div>
      <div class="informationGroup">
        <%= c.submit "Skapa api-nyckel" %>
      </div>
      <%= link_to "Tillbaka", creators_path %>
    </div>
<% end %>